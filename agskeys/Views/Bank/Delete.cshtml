@model agskeys.Models.bank_table

<div class="modal-body">
    <!-- [ breadcrumb ] start -->
    <div class="page-header card">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <i class="feather icon-user bg-c-blue"></i>
                    <div class="d-inline">
                        <h4>Delete Bank</h4>
                        <span>Agskeys</span><br /><br />
                        <h5>Are you sure you want to delete this?</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <button type="button" class="close" style="font-size:30px" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-6 col-md-6">
                        <center style="padding-bottom:30px;">                            
                            @{if (Model.photo != null)
                                {

                                    if (System.IO.File.Exists(Server.MapPath(Model.photo)) == true)
                                    {

                                        <img class="rounded" width="150" height="150" src="@Url.Content(Model.photo)" style="border-radius: 6.25rem!important;box-shadow: 0 0 55px 0 rgba(43,43,43,0.1),0 11px 6px -7px rgba(43,43,43,0.1);">
                                    }
                                    else
                                    {

                                        <img class="rounded" width="150" height="150" src="@Url.Content("~/bankImage/dummy.jpg")" alt="This is Default Image" title="This is Default Image Title" style="border-radius: 6.25rem!important;box-shadow: 0 0 55px 0 rgba(43,43,43,0.1),0 11px 6px -7px rgba(43,43,43,0.1);">
                                    }

                                }
                                else
                                {                                    
                                    @Html.DisplayFor(model => model.photo)
                                    <img class="rounded" width="150" height="150" src="@Url.Content("~/bankImage/dummy.jpg")" alt="This is Default Image" title="This is Default Image Title" style="border-radius: 6.25rem!important;box-shadow: 0 0 55px 0 rgba(43,43,43,0.1),0 11px 6px -7px rgba(43,43,43,0.1);">
                                }

                            }
                        </center>
                    </div>

                    <div class="col-sm-6 col-md-6">
                        <!-- Basic Form Inputs card start -->
                        <div class="card">
                            <h4 style="margin:20px;">Main Information</h4>
                            <table class="table">
                                <tr>
                                    <th style="padding-left:30px;">Bank Name</th>
                                    <td>@Html.DisplayFor(model => model.bankname)</td>
                                </tr>
                            </table>
                        </div>
                        

                    </div>
                    <div style="margin-left:25px;">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Back to List", "Bank")
                            </div>
                        }
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


