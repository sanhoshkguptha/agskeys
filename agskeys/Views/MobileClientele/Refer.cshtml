@model IEnumerable<agskeys.Models.customer_profile_table>

@{
    ViewBag.Title = "Refer";
    Layout = "~/Views/Shared/_MobileClienteleLayout.cshtml";
}
<style>
    .f1 {
        color: #580000;
    }
</style>
<div class="L1 navbar-header">
    <!-- <img src="images/bg.jpg"> -->
    <div class="container">
        <div class="row" style="background: #fa4e5a;">

            <div class="col-sm-12 col-xs-12 disp-name">
                <span class="col-sm-2 col-xs-2 " style="font-size:30px;cursor:pointer;color:white;" onclick="openNav()">&#9776; </span>

                <div id="L1-body">
                    <p class="col-sm-8 col-xs-8 ">Refer</p>
                    <a class="col-sm-2 col-xs-2 " onclick="goBack()" style="padding-top: 8px;"><i class="fa fa-angle-left"></i></a>
                </div>
            </div>
        </div>

    </div>



</div>

<div class="L1 main-page" id="L-body" style="min-height: 100%;">
    <div class="container">
        <div class="row " id="sec">




        </div>
        <div class="row" style="min-height:100vh;">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                    <div class="card proj-progress-card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="col-sm-3"  style="float:left"><img src="~/additionalimages/membership.png" width="58" height="58" /></div>
                                <div class="col-sm-9"><h4 style="color:#d92027" class="head">LAUCHED NEW MEMBERSHIP CARDS FOR CUSTOMERS</h4></div>
                                
                                
                                <h5 style="color:#0a55ab">Existing / New Customer will get three types of Membership Card from AGSKEYS</h5>
                                <table>
                                    <tr class="col">
                                        <td style="color:#d27f07">TYPE A - GOLD Membership Card - Reference up to 10 friends</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#d27f07">TYPE B - PLATINUM Membership Card - Reference 11 - 20 friends</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#d27f07">TYPE C - SIGNATURE Membership Card - Reference above 21 friends</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#d92027">By reference of one loan Customer to AGSKEYS the Memeber and friend will earn 2000 points Each</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#0c1c93">1.Gold Card Member 1 point is equal to 1/-</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#0c1c93">2.Platinum Card Member 1 point is equal to 2/-</td>
                                    </tr>
                                    <tr>
                                        <td style="color:#0c1c93">3.Signature Card Member 1 point is equal to 3/-</td>
                                    </tr>
                                    <tr><td style="color:#034a0e">*** Conditions Applied</td></tr>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                        <form class="form-horizontal f1" id="login-form" method="post" action="@Url.Content("/MobileClientele/Refer/")">
                            <div class="auth-box card">
                                <div class="card-block">
                                    @if (TempData["customerSuccessMsg"] != null)
                                    {

                                        <div class="alert alert-success alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                                            @TempData["customerSuccessMsg"].ToString()
                                        </div>

                                    }
                                    @if (TempData["customerFailedMsg"] != null)
                                    {

                                        <div class="alert alert-danger alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                                            @TempData["customerFailedMsg"].ToString()
                                        </div>

                                    }
                                    <div class="form-group form-primary">
                                        <label class="float-label">Person Name</label>
                                        <input type="text" id="referName" name="referName" class="form-control formenquiry" placeholder="Referring Person name" required="required" autofocus="autofocus">
                                        <span class="form-bar"></span>

                                    </div>
                                    <div class="form-group form-primary">

                                        <label class="float-label">Contact Number</label>
                                        <input type="text" id="referNumber" name="referNumber" class="form-control formenquiry" placeholder="Contact number" required="required">
                                        <span class="form-bar"></span>
                                    </div>
                                    <div class="form-group form-primary">

                                        <label class="float-label">Email Address</label>
                                        <input type="text" id="referemail" name="referemail" class="form-control formenquiry" placeholder="Email Address">
                                        <span class="form-bar"></span>
                                    </div>


                                    <div class="row m-t-30">
                                        <div class="col-md-12">
                                            <button type="submit" value="SentEmail" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style="background-color: #d91f27; border-color: white;">Sent Email</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--<div class="col-sm-12" >
                <!-- Authentication card start 
                <div class="card">
                    <div class="card-body">                        
                    </div>
                </div>
            </div>-->
            
        </div>
    </div>
</div>