@model IEnumerable<agskeys.Models.customer_profile_table>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_MobileSalesExecutiveLayout.cshtml";
}

<div class="L1 navbar-header">
    <!-- <img src="images/bg.jpg"> -->
    <div class="container">
        <div class="row" style="background: #fa4e5a;">
            <div class="col-sm-12 col-xs-12 disp-name">
                <span class="col-sm-2 col-xs-2 " style="font-size:30px;cursor:pointer;color:white;" onclick="openNav()">&#9776;</span>
                <div id="L1-body">
                    <p class="col-sm-8 col-xs-8">Customer</p>
                    <a class="col-sm-2 col-xs-2" onclick="goBack()" style="padding-top: 8px;"><i class="fa fa-angle-left"></i></a>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="L1 main-page" id="L-body" style="min-height: 100%;">
    <div class="container">
        <div class="row " id="sec">
        </div>

        <div class="row">           
            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                i++;
                <div class="col-md-12" style="margin-top:20px;">
                    <div class="card-block p-b-0">

                        <div class="table-responsive">
                            <table class="table ">

                                <tbody class="loan-table">
                                    <tr style="background-image: linear-gradient(to right, #000, #fa4e5a);margin-top: 10px !important;color: white; font-size: 18px;font-weight: bold;">

                                        <th colspan="2">@i. @Html.DisplayFor(modelItem => item.name)</th>
                                    </tr>
                                    <tr>
                                        <th>
                                            Customer Id
                                        </th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.customerid)
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>
                                            Phone
                                        </th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.phoneno)
                                        </td>
                                    </tr>                                   
                                    <tr style="background:#e4e0e0;">

                                        <td colspan="2">
                                            <a class="btn btn-primary" href="#" id="details" data-toggle="tooltip"  data-html="true" title="Details" onclick="createModal('@Url.Action("Details", "MobileSalesExecutive" , new {id=item.id })')"> <i class="fa fa-info-circle" style="color:#fff;"></i> </a>

                                        </td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
